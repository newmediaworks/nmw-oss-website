	<profiles>
		<!-- Features only enabled during development time -->
		<profile>
			<id>development</id>
			<dependencies>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-openfile-all</artifactId><version>1.3.0-validation-SNAPSHOT</version>
					<type>pom</type>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>release</id>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId><artifactId>maven-war-plugin</artifactId>
							<configuration>
								<overlays>
									<overlay>
										<groupId>com.newmediaworks</groupId><artifactId>nmw-email-taglib</artifactId>
										<type>jar</type>
										<classifier>javadoc</classifier>
										<targetPath>email-taglib/apidocs</targetPath>
									</overlay>
									<overlay>
										<groupId>com.newmediaworks</groupId><artifactId>nmw-payment-taglib</artifactId>
										<type>jar</type>
										<classifier>javadoc</classifier>
										<targetPath>payment-taglib/apidocs</targetPath>
									</overlay>
								</overlays>
							</configuration>
						</plugin>
						<plugin>
							<groupId>org.apache.tomcat.maven</groupId><artifactId>tomcat7-maven-plugin</artifactId>
							<configuration>
								<charset>UTF-8</charset>
								<server>oss.newmediaworks.com</server>
								<path>/</path>
								<update>true</update>
								<url>https://oss.newmediaworks.com/sck2Fhmz8LRheLL7ZYP3Hc/text</url>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
			<dependencies>
				<!-- Only include Google Analytics on production releases to not pollute with dev data -->
				<!-- TODO: Once have Google Analytics tracking id:
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-google-analytics</artifactId><version>1.0.2-validation-SNAPSHOT</version>
				</dependency>
				-->
				<!-- Dependencies for javadocs -->
				<dependency>
					<groupId>com.newmediaworks</groupId><artifactId>nmw-email-taglib</artifactId><version>1.0.0-SNAPSHOT</version>
					<classifier>javadoc</classifier>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>com.newmediaworks</groupId><artifactId>nmw-payment-taglib</artifactId><version>1.0.0-SNAPSHOT</version>
					<classifier>javadoc</classifier>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

