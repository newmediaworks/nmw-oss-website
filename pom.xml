	<name>oss.newmediaworks.com</name>
	<url>https://oss.newmediaworks.com/</url>
	<description>The oss.newmediaworks.com website.</description>
	<inceptionYear>2019</inceptionYear>

	<scm>
		<connection>scm:git:git://github.com/newmediaworks/nmw-oss-website.git</connection>
		<developerConnection>scm:git:git@github.com:newmediaworks/nmw-oss-website.git</developerConnection>
		<url>https://github.com/newmediaworks/nmw-oss-website</url>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/newmediaworks/nmw-oss-website/issues</url>
	</issueManagement>

	<build>
		<plugins>
			<plugin>
				<!--
					Workaround "versions:display-plugin-updates" failing when "release" profile active.
					See https://github.com/mojohaus/versions-maven-plugin/issues/354

					A recent optimization moved all configuration of the maven-war-plugin to
					profileManagement, to avoid the overhead of instantiating this plugin on
					all projects.  This, however, has exposed us to this bug.
				-->
				<groupId>org.apache.maven.plugins</groupId><artifactId>maven-war-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<!-- Features only enabled during development time -->
			<id>development</id>
			<dependencies>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-openfile-all</artifactId>
					<type>pom</type>
					<scope>runtime</scope>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-all</artifactId>
					<scope>runtime</scope>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-tree</artifactId>
					<scope>runtime</scope>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId><artifactId>semanticcms-view-what-links-here</artifactId>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId><artifactId>maven-war-plugin</artifactId>
						<configuration>
							<overlays>
								<overlay>
									<groupId>com.newmediaworks</groupId><artifactId>nmw-email-taglib</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>email-taglib/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.newmediaworks</groupId><artifactId>nmw-payment-taglib</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>payment-taglib/apidocs</targetPath>
								</overlay>
							</overlays>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.tomcat.maven</groupId><artifactId>tomcat7-maven-plugin</artifactId>
						<configuration>
							<charset>UTF-8</charset>
							<server>oss.newmediaworks.com</server>
							<path>/</path>
							<update>true</update>
							<url>${tomcat7-maven-plugin-oss.newmediaworks.com}</url>
						</configuration>
					</plugin>
				</plugins>
			</build>

			<dependencies>
				<!-- Dependencies for javadocs -->
				<dependency>
					<groupId>com.newmediaworks</groupId><artifactId>nmw-email-taglib</artifactId><version>1.0.3${POST-SNAPSHOT}</version>
					<classifier>javadoc</classifier>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>com.newmediaworks</groupId><artifactId>nmw-payment-taglib</artifactId><version>1.0.1${POST-SNAPSHOT}</version>
					<classifier>javadoc</classifier>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>publish</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.tomcat.maven</groupId><artifactId>tomcat7-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>publish</id><phase>deploy</phase><goals><goal>deploy-only</goal></goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

